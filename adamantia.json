{
    "bundles": [
        "core.telnet-networking",
        "core.default-areas"
    ],
    "entityLoaders": {
        "accounts": {
            "source": "JsonDirectory",
            "config": {
                "path": "[DATA]/account"
            }
        },
        "areas": {
            "source": "JsonArea",
            "config": {
                "path": "[BUNDLES]/[BUNDLE]/areas"
            }
        },
        "players": {
            "source": "JsonDirectory",
            "config": {
                "path": "[DATA]/player"
            }
        },
        "rooms": {
            "source": "Json",
            "config": {
                "path": "[BUNDLES]/[BUNDLE]/areas/[AREA]/rooms.json"
            }
        }
    },
    "logfile": "server.log",
    "port.telnet": 4000
}
