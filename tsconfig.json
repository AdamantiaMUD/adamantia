{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": false,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "build",
        "paths": {
            "~/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "ES2019",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "exclude": ["node_modules"],
    "include": [
        "src/**/*",
        "src/**/*.json"
    ]
}
