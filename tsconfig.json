{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNEXT",
        "allowJs": false,
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}
