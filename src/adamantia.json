{
    "bundles": [
        "core.telnet-networking",
        "core.default-areas",
        "core.input-events",
        "core.character-attributes",
        "core.commands",
        "core.player-events",
        "core.behaviors"
    ],
    "entityLoaders": {
        "accounts": {
            "source": "JsonDirectory",
            "config": {
                "path": "[DATA]/account"
            }
        },
        "areas": {
            "source": "JsonArea",
            "config": {
                "path": "[BUNDLES]/[BUNDLE]/areas"
            }
        },
        "items": {
            "source": "Json",
            "config": {
                "path": "[BUNDLES]/[BUNDLE]/areas/[AREA]/items.json"
            }
        },
        "players": {
            "source": "JsonDirectory",
            "config": {
                "path": "[DATA]/player"
            }
        },
        "rooms": {
            "source": "Json",
            "config": {
                "path": "[BUNDLES]/[BUNDLE]/areas/[AREA]/rooms.json"
            }
        }
    },
    "logfile": "server.log",
    "port.telnet": 4000,
    "startingRoom": "limbo:r0001"
}
