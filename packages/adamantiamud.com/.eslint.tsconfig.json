{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "react",
        "lib": ["dom", "esnext"]
    },
    "include": [
        "./src/**/*",
        "./*.js",
        "./*.ts",
        "./*.tsx"
    ],
    "typeRoots": ["node_modules/@types"]
}
