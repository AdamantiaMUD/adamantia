{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "noEmit": true,

        "jsx": "react-jsx",
        "typeRoots": ["../../node_modules/@types", "./node_modules/@types"]
    },
    "include": ["src"]
}
