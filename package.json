{
    "name": "@adamantiamud/core",
    "version": "0.0.1-alpha.1",
    "description": "Core libraries for the AdamantiaMUD game engine",
    "author": "Bill Parrott (https://chimericdream.com)",
    "license": "MIT",
    "repository": "github:adamantiamud/core",
    "bugs": "https://github.com/adamantiamud/core/issues",
    "main": "build/lib/index.js",
    "typings": "build/lib/index.d.ts",
    "files": [
        "src/**/*",
        "build/**/*",
        "*.adoc"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "build": "tsc -d",
        "clean": "rimraf build/*",
        "lint": "eslint ./src --ext .ts",
        "lint:fix": "eslint ./src --ext .ts --fix",
        "lint:quiet": "eslint ./src --ext .ts --quiet",
        "postbuild": "node scripts/copy-assets.cjs && npx copyfiles -u 1 src/**/*.yml build",
        "prebuild": "npm run clean",
        "prepublishOnly": "npm run build",
        "test": "jest --config ./jest.config.cjs --coverage",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "dependencies": {
        "bcryptjs": "2.4.3",
        "chalk": "4.1.2",
        "chance": "1.1.8",
        "chance-token-replacer": "1.3.1",
        "commander": "6.1.0",
        "deepmerge": "4.2.2",
        "fs-extra": "10.0.0",
        "humanize-duration-ts": "2.1.1",
        "immer": "9.0.6",
        "js-yaml": "3.14.0",
        "lodash.get": "4.4.2",
        "lodash.set": "4.3.2",
        "logform": "2.2.0",
        "rfdc": "1.3.0",
        "sprintf-js": "1.1.2",
        "uuid": "8.3.2",
        "winston": "3.3.3",
        "winston-transport": "4.4.0",
        "wrap-ansi": "8.0.1",
        "ws": "7.5.5"
    },
    "devDependencies": {
        "@chimericdream/eslint-config": "6.1.0",
        "@chimericdream/eslint-config-import": "1.0.2",
        "@chimericdream/eslint-config-jest": "4.0.1",
        "@chimericdream/eslint-config-typescript": "5.1.0",
        "@types/bcryptjs": "2.4.2",
        "@types/chance": "1.1.3",
        "@types/fs-extra": "9.0.12",
        "@types/jest": "27.0.1",
        "@types/js-yaml": "4.0.3",
        "@types/lodash.get": "4.4.6",
        "@types/lodash.set": "4.3.6",
        "@types/node": "16.9.2",
        "@types/rfdc": "1.2.0",
        "@types/sprintf-js": "1.1.2",
        "@types/uuid": "8.3.1",
        "@types/wrap-ansi": "8.0.1",
        "@types/ws": "7.4.7",
        "@typescript-eslint/eslint-plugin": "4.31.1",
        "@typescript-eslint/parser": "4.31.1",
        "copyfiles": "2.4.1",
        "eslint": "7.32.0",
        "eslint-plugin-jest": "24.4.2",
        "jest": "27.2.0",
        "jest-each": "27.2.0",
        "rimraf": "3.0.2",
        "ts-jest": "27.0.5",
        "type-fest": "2.3.3",
        "typescript": "4.4.3"
    }
}
