{
    "name": "@adamantiamud/core",
    "version": "0.0.1-alpha.1",
    "description": "Core libraries for the AdamantiaMUD game engine",
    "author": "Bill Parrott (https://chimericdream.com)",
    "license": "MIT",
    "repository": "github:adamantiamud/core",
    "bugs": "https://github.com/adamantiamud/core/issues",
    "main": "build/lib/index.js",
    "typings": "build/lib/index.d.ts",
    "type": "module",
    "files": [
        "src/**/*",
        "build/**/*",
        "*.adoc"
    ],
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "build": "tsc",
        "clean": "rimraf build",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "lint:quiet": "eslint --quiet",
        "postbuild": "node scripts/copy-assets.cjs && npx copyfiles -u 1 src/**/*.yml build",
        "postlint:fix": "prettier --write src",
        "prebuild": "npm run clean",
        "prepublishOnly": "npm run build",
        "test": "jest --config ./jest.config.cjs --coverage",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "dependencies": {
        "bcryptjs": "2.4.3",
        "chalk": "5.3.0",
        "chalk-template": "1.1.0",
        "chance": "1.1.11",
        "chance-token-replacer": "1.3.1",
        "commander": "12.0.0",
        "deepmerge": "4.3.1",
        "fs-extra": "11.2.0",
        "humanize-duration-ts": "2.1.1",
        "immer": "10.0.4",
        "js-yaml": "4.1.0",
        "lodash.get": "4.4.2",
        "lodash.set": "4.3.2",
        "logform": "2.6.0",
        "rfdc": "1.3.1",
        "sprintf-js": "1.1.3",
        "uuid": "9.0.1",
        "winston": "3.13.0",
        "winston-transport": "4.7.0",
        "wrap-ansi": "9.0.0",
        "ws": "8.16.0"
    },
    "devDependencies": {
        "@chimericdream/eslint-config": "7.0.2",
        "@chimericdream/eslint-config-import": "1.1.2",
        "@chimericdream/eslint-config-jest": "4.1.1",
        "@chimericdream/eslint-config-typescript": "6.0.0",
        "@types/bcryptjs": "2.4.6",
        "@types/chance": "1.1.6",
        "@types/fs-extra": "11.0.4",
        "@types/jest": "29.5.12",
        "@types/js-yaml": "4.0.9",
        "@types/lodash.get": "4.4.9",
        "@types/lodash.set": "4.3.9",
        "@types/node": "20.12.7",
        "@types/rfdc": "1.2.0",
        "@types/sprintf-js": "1.1.4",
        "@types/uuid": "9.0.8",
        "@types/wrap-ansi": "8.0.2",
        "@types/ws": "8.5.10",
        "@typescript-eslint/eslint-plugin": "7.6.0",
        "@typescript-eslint/parser": "7.6.0",
        "copyfiles": "2.4.1",
        "eslint": "8.57.0",
        "eslint-plugin-jest": "28.2.0",
        "eslint-plugin-prettier": "5.1.3",
        "jest": "29.7.0",
        "jest-each": "29.7.0",
        "prettier": "3.2.5",
        "rimraf": "5.0.5",
        "ts-jest": "29.1.2",
        "type-fest": "4.15.0",
        "typescript": "5.4.5"
    }
}
