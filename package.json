{
    "name": "@adamantiamud/demo",
    "version": "0.0.1-alpha.1",
    "description": "Sample MUD to demonstrate the basic concepts of the AdamantiaMUD game engine",
    "author": "Bill Parrott (https://chimericdream.com)",
    "license": "MIT",
    "repository": "github:adamantiamud/demo",
    "bugs": "https://github.com/adamantiamud/demo/issues",
    "type": "module",
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "build": "tsc",
        "clean": "rimraf build/*",
        "postbuild": "node scripts/copy-assets.cjs && copyfiles data/**/*.json build",
        "prebuild": "npm run clean",
        "prestart": "npm run build",
        "start": "node --experimental-specifier-resolution=node ./build/server.js",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "main": "build/server.js",
    "dependencies": {
        "@adamantiamud/core": "file:../core",
        "commander": "6.1.0"
    },
    "devDependencies": {
        "@chimericdream/eslint-config": "7.0.2",
        "@chimericdream/eslint-config-import": "1.1.1",
        "@chimericdream/eslint-config-typescript": "6.0.0",
        "@types/fs-extra": "9.0.13",
        "@types/node": "20.12.7",
        "@typescript-eslint/eslint-plugin": "7.6.0",
        "@typescript-eslint/parser": "7.6.0",
        "copyfiles": "2.4.1",
        "eslint": "8.57.0",
        "fs-extra": "10.0.0",
        "rimraf": "3.0.2",
        "typescript": "5.4.5"
    }
}
