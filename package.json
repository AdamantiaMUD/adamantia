{
    "name": "@adamantiamud/monorepo",
    "engines": {
        "node": ">=20"
    },
    "packageManager": "pnpm@9.0.2",
    "scripts": {
        "build": "pnpm -r build",
        "clean": "pnpm -r clean",
        "lint": "pnpm -r --no-bail lint",
        "start": "pnpm --filter \"*core\" build && pnpm --filter \"*demo\" start",
        "test": "pnpm -r --no-bail test",
        "type-check": "pnpm -r type-check"
    },
    "devDependencies": {
        "@chimericdream/eslint-config": "7.0.3",
        "@chimericdream/eslint-config-import": "1.1.2",
        "@chimericdream/eslint-config-jest": "4.1.1",
        "@chimericdream/eslint-config-typescript": "6.0.0",
        "@types/jest": "29.5.12",
        "@types/node": "20.12.7",
        "@typescript-eslint/eslint-plugin": "7.6.0",
        "@typescript-eslint/parser": "7.6.0",
        "eslint": "8.57.0",
        "eslint-plugin-jest": "28.2.0",
        "eslint-plugin-prettier": "5.1.3",
        "jest": "29.7.0",
        "jest-each": "29.7.0",
        "prettier": "3.2.5",
        "rimraf": "5.0.5",
        "typescript": "5.4.5"
    }
}
