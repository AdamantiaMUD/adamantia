{
    "name": "@adamantiamud/adamantia-core",
    "version": "0.0.1-alpha.1",
    "description": "Core libraries for the AdamantiaMUD game engine",
    "author": "Bill Parrott (https://chimericdream.com)",
    "license": "MIT",
    "repository": "github:adamantiamud/adamantia-core",
    "bugs": "https://github.com/adamantiamud/adamantia-core/issues",
    "type": "module",
    "main": "build/index.js",
    "types": "index.d.ts",
    "files": [
        "index.d.ts",
        "src/**/*",
        "build/**/*",
        "*.adoc"
    ],
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "build": "tsc",
        "clean": "rimraf build/*",
        "postbuild": "node scripts/copy-assets.js",
        "prebuild": "npm run clean",
        "prepublishOnly": "npm run build",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "dependencies": {
        "bcryptjs": "2.4.3",
        "commander": "3.0.2",
        "humanize-duration": "3.20.1",
        "rfdc": "1.1.4",
        "uuid": "3.3.3",
        "winston": "3.2.1",
        "wrap-ansi": "6.0.0"
    },
    "devDependencies": {
        "@chimericdream/eslint-config": "4.1.0",
        "@chimericdream/eslint-config-typescript": "3.0.0",
        "@types/node": "12.7.8",
        "@types/wrap-ansi": "3.0.0",
        "@typescript-eslint/eslint-plugin": "2.3.1",
        "@typescript-eslint/parser": "2.3.1",
        "eslint": "6.5.0",
        "rimraf": "3.0.0",
        "sty": "0.6.1",
        "typescript": "3.6.3"
    }
}
