{
    "name": "@adamantiamud/adamantia-core",
    "version": "0.0.1-alpha.1",
    "description": "Core libraries for the AdamantiaMUD game engine",
    "author": "Bill Parrott (https://chimericdream.com)",
    "license": "MIT",
    "repository": "github:adamantiamud/adamantia-core",
    "bugs": "https://github.com/adamantiamud/adamantia-core/issues",
    "type": "module",
    "main": "build/index.js",
    "types": "index.d.ts",
    "files": [
        "index.d.ts",
        "src/**/*",
        "build/**/*",
        "*.adoc"
    ],
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "build": "tsc",
        "clean": "rimraf build/*",
        "postbuild": "node scripts/copy-assets.js && npx copyfiles -u 1 src/**/*.yml build",
        "prebuild": "npm run clean",
        "prepublishOnly": "npm run build",
        "test": "jest --config ./jest.config.js --coverage",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "dependencies": {
        "bcryptjs": "2.4.3",
        "commander": "4.0.1",
        "fs-extra": "8.1.0",
        "humanize-duration": "3.21.0",
        "js-yaml": "3.13.1",
        "rando-js": "0.2.0",
        "rfdc": "1.1.4",
        "sprintf-js": "1.1.2",
        "uuid": "3.3.3",
        "winston": "3.2.1",
        "wrap-ansi": "6.2.0"
    },
    "devDependencies": {
        "@chimericdream/eslint-config": "5.1.0",
        "@chimericdream/eslint-config-jest": "3.0.1",
        "@chimericdream/eslint-config-typescript": "4.0.1",
        "@types/jest": "24.0.23",
        "@types/js-yaml": "3.12.1",
        "@types/node": "12.12.11",
        "@types/sprintf-js": "1.1.2",
        "@types/wrap-ansi": "3.0.0",
        "copyfiles": "2.1.1",
        "eslint": "6.6.0",
        "jest": "24.9.0",
        "jest-each": "24.9.0",
        "rimraf": "3.0.0",
        "sty": "0.6.1",
        "ts-jest": "24.1.0",
        "typescript": "3.7.2"
    }
}
