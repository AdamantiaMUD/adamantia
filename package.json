{
    "name": "@adamantiamud/adamantia-core",
    "version": "0.0.1-alpha.1",
    "description": "Core libraries for the AdamantiaMUD game engine",
    "author": "Bill Parrott (https://chimericdream.com)",
    "license": "MIT",
    "repository": "github:adamantiamud/adamantia-core",
    "bugs": "https://github.com/adamantiamud/adamantia-core/issues",
    "main": "build/lib/index.js",
    "types": "build/lib/index.d.ts",
    "files": [
        "src/**/*",
        "build/**/*",
        "*.adoc"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "build": "tsc",
        "build:types": "tsc -d",
        "clean": "rimraf build/*",
        "lint": "eslint ./src --ext .ts",
        "lint:quiet": "eslint ./src --ext .ts --quiet",
        "postbuild": "node scripts/copy-assets.cjs && npx copyfiles -u 1 src/**/*.yml build",
        "postbuild:types": "npm run postbuild",
        "prebuild": "npm run clean",
        "prebuild:types": "npm run prebuild",
        "prepublishOnly": "npm run build",
        "test": "jest --config ./jest.config.cjs --coverage",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "dependencies": {
        "bcryptjs": "2.4.3",
        "chalk": "4.1.0",
        "chance": "1.1.7",
        "chance-token-replacer": "1.3.1",
        "commander": "6.1.0",
        "fs-extra": "9.0.1",
        "humanize-duration-ts": "2.1.1",
        "immer": "7.0.9",
        "js-yaml": "3.14.0",
        "lodash.get": "4.4.2",
        "lodash.set": "4.3.2",
        "logform": "2.2.0",
        "rando-js": "0.2.0",
        "rfdc": "1.1.4",
        "sprintf-js": "1.1.2",
        "uuid": "8.3.1",
        "winston": "3.3.3",
        "winston-transport": "4.4.0",
        "wrap-ansi": "7.0.0",
        "ws": "7.3.1"
    },
    "devDependencies": {
        "@chimericdream/eslint-config": "6.0.2",
        "@chimericdream/eslint-config-import": "1.0.1",
        "@chimericdream/eslint-config-jest": "4.0.0",
        "@chimericdream/eslint-config-typescript": "5.0.1",
        "@types/bcryptjs": "2.4.2",
        "@types/chance": "1.1.0",
        "@types/fs-extra": "9.0.2",
        "@types/jest": "26.0.14",
        "@types/js-yaml": "3.12.5",
        "@types/lodash.get": "4.4.6",
        "@types/lodash.set": "4.3.6",
        "@types/node": "14.11.8",
        "@types/rfdc": "1.1.0",
        "@types/sprintf-js": "1.1.2",
        "@types/uuid": "8.3.0",
        "@types/wrap-ansi": "3.0.0",
        "@types/ws": "7.2.7",
        "@typescript-eslint/eslint-plugin": "4.4.0",
        "@typescript-eslint/parser": "4.4.0",
        "copyfiles": "2.4.0",
        "eslint": "7.11.0",
        "eslint-plugin-jest": "24.1.0",
        "jest": "26.5.3",
        "jest-each": "26.5.2",
        "rimraf": "3.0.2",
        "ts-jest": "26.4.1",
        "typescript": "4.0.3"
    }
}
